<div>Requests I've received</div>

<div>
  <% @requests.each do |request| %>

        <ul>
          <li><%= request.available_date_space_space_id %></li>
          <li><%= request.user.email %></li>
          <li>Date: <%= request.available_date_space_available_date_id %></li>
          <li>Status: <%= request.status%></li>
        </ul>
        <form action="/requests/booking/<%= request.id%>" method="post">
          <input type="submit" value="Confirm" >
        </form>

  <% end %>

</div>
