<h1> Spaces </h1>

<form method='get' action='/spaces/new'>
  <input type='submit' value='Add a space'>
</form>

<% @spaces.each do |space| %>
<div>
  Name: <%= space.name %>
</div>
<div>
  Description: <%= space.description %>
</div>
<div>
  Price per night: Â£<%= space.price %>
</div>
<div>
  Available from: <%=space.available_from%> to <%=space.available_to%>
</div>
<div>
  Owner: <%= space.user.email %>
</div>

  <form method='get' action='/spaces/<%= space.id %>'>
    <input type='submit' value='View space'>
  </form>

<% end %>
